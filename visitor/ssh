#!/bin/bash

docker pull ghcr.io/gchux/cloud-run-ssh:client-latest
docker tag ghcr.io/gchux/cloud-run-ssh:client-latest cloud-run-ssh-client:latest

docker run -it --rm \
        --name=cloud-run-ssh-client \
        -e "INSTANCE_ID=${1}" \
        --env-file=ssh.env \
        cloud-run-ssh-client:latest
